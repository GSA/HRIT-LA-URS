@page
@model lmsextreg.Pages.Admin.UpdateModel



<div class="card w-75">
    <h5 class="card-header">@Model.AppUser.FullName</h5>
    <div class="card-body">
        <form method="POST">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="userFirstName" class="mb-0">First Name:</label>
                    <input type="text" class="form-control mt-0" id="userFirstName" asp-for="AppUser.FirstName" readonly>
                    <span asp-validation-for="AppUser.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label for="userMiddleName" class="mb-0">Middle Name:</label>
                    <input type="text" class="form-control mt-0" id="userMiddleName" asp-for="AppUser.MiddleName" readonly>
                    <span asp-validation-for="AppUser.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label for="userLastName" class="mb-0">Last Name:</label>
                    <input type="text" class="form-control mt-0" id="userLastName" asp-for="AppUser.LastName" readonly>
                    <span asp-validation-for="AppUser.LastName" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>